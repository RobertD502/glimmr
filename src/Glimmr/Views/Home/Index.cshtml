            <!-- Capture Preview -->
            <div class="row border justify-content-center pb-5">
                <div class="col-12 headerCol">Preview</div>
                <div class="col-6">
                    <div class="col-12 titleCol">Input</div>
                    <div class="col-12">
                        <img id="inputPreview" class="prevImg img-fluid" alt="Input preview." src="~/img/no_preview.jpg"/>
                    </div>
                </div>
                <div class="col-6">
                    <div class="col-12 titleCol">Output</div>
                    <div class="col-12">
                        <img id="outputPreview" class="prevImg img-fluid" alt="Output preview." src="~/img/no_preview.jpg"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-xl-3 form-group">
                    <label class="form-label">Preview Mode</label>
                    <select data-object="SystemData" data-property="PreviewMode" class="form-control">
                        <option value="0">None</option>
                        <option value="1">LED</option>
                        <option value="2">Sectors</option>
                    </select>
                </div>
            </div>

            <div class="row border justify-content-center pb-5" id="settingsCaptureLed">
                <div class="col-12 titleCol">LED Counts</div>
                <div class="col-12 form-text mb-4">Enter the total number of LEDs around the perimerter of your screen.</div>
                <!-- Left count -->
                <div class="col-6 col-md-3 align-self-center">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="ledCountLeft">Left</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="LeftCount" data-object="SystemData" aria-label="Left" aria-describedby="ledCountLeft">
                    </div>
                </div>
                <!-- Right count -->
                <div class="col-6 col-md-3 align-self-center">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="ledCountRight">Right</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="RightCount" data-object="SystemData" aria-label="Right" aria-describedby="ledCountRight">
                    </div>
                </div>
                <!-- Top count -->
                <div class="col-6 col-md-3 align-self-center">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="ledCountTop">Top</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="TopCount" data-object="SystemData" aria-label="Top" aria-describedby="ledCountTop">
                    </div>
                </div>
                <!-- Bottom count -->
                <div class="col-6 col-md-3 align-self-center">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="ledCountBottom">Bottom</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="BottomCount" data-object="SystemData" aria-label="Bottom" aria-describedby="ledCountBottom">
                    </div>
                </div>
                <!-- Preview -->
                <div class="col-12 col-md-8" id="sLedPreview">
                    <div id="sLedWrap"></div>
                </div>
            </div>
            <div class="row border justify-content-center pb-5" id="settingsCaptureSector">
                <div class="col-12 titleCol">Sector Counts</div>
                <div class="col-12 form-text mb-4">Enter the number of vertical and horizontal sectors. You will need to re-map your sectors for devices after this.</div>
                <!-- Top count -->
                <div class="col-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="hSectorCount">Horizontal</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="HSectors" data-object="SystemData" aria-label="Top" aria-describedby="ledCountTop">
                    </div>
                </div>
                <!-- Left count -->
                <div class="col-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="vSectorCount">Vertical</span>
                        </div>
                        <input type="text" class="form-control ledCount" data-property="VSectors" data-object="SystemData" aria-label="Left" aria-describedby="ledCountLeft">
                    </div>
                </div>
                <!-- CENTER MODE! -->
                <div class="col-12 col-md-6 custom-control custom-switch align-self-center mt-2 justify-content-center mb-4">
                    <input type="checkbox" class="custom-control-input" data-object="SystemData" data-property="UseCenter"/>
                    <label class="custom-control-label">Use Center of Screen for Sectors</label>
                    <div class="form-text">Sectors will be captured in order from right-left, bottom-top.</div>
                </div>
                <!-- Preview -->
                <div class="col-12 col-md-8" id="sectorPreview">
                    <div id="sectorWrap"></div>
                </div>

            </div>

        </div>
    </div>
    <div class="tab-pane fade" id="audioTab" role="tabpanel" aria-labelledby="audio-tab">
    <div class="container-fluid">
        <div class="row border justify-content-center pb-5">
            <div class="col-12 headerCol">Music Mode</div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Input Device</label>
                <select class="form-control" data-object="SystemData" data-property="RecDev" id="RecDev">

                </select>
            </div>
        </div>
        <div class="row border justify-content-center pb-5">
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Sector Map</label>
                <select class="form-control" data-object="SystemData" data-property="AudioMap">
                    <option value="0">Bottom</option>
                    <option value="1">Top</option>
                    <option value="2">Center</option>
                    <option value="3">Middle</option>
                    <option value="4">Corners</option>
                </select>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Rotation Speed</label>
                <input class="form-control" data-object="SystemData" data-property="AudioRotationSpeed" type="number" min=".99" max=".99" step=".01"/>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Rotation Sensitivity</label>
                <input class="form-control" data-object="SystemData" data-property="AudioRotationSensitivity" type="number" min="-.99" max=".99" step=".01"/>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Rotation Lower Limit</label>
                <input class="form-control" data-object="SystemData" data-property="AudioRotationLower" type="number" min="0" max="1" step=".01"/>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Rotation Upper Limit</label>
                <input class="form-control" data-object="SystemData" data-property="AudioRotationUpper" type="number" min="0" max="1" step=".01"/>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Audio Gain</label>
                <input class="form-control" data-object="SystemData" data-property="AudioGain" type="number" min="0" max="5" step=".1"/>
            </div>
            <div class="col-12 col-md-6 col-xl-3 justify-content-center form-group">
                <label class="form-label">Low Audio Cutoff</label>
                <input class="form-control" data-object="SystemData" data-property="AudioMin" type="number" min="0" max=".1" step=".001"/>
            </div>
        </div>
    </div>
</div>

</div>

</div>
