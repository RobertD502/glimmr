                            <div class="btn colorBoost" data-mode="0">Off</div>
                            <div class="btn colorBoost" data-mode="1">Low</div>
                            <div class="btn colorBoost" data-mode="2">Med</div>
                            <div class="btn colorBoost" data-mode="3">High</div>
                        </div>
