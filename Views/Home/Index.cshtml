<div class="bg-dark text-white hidden" id="nanoCard">
    <div id="nanoPane">
        <div class="card-body">
            <div class="row justify-content-center">
                <div id="nanoBtn">
                    <div id="nanoImg" class="unlinked">
                        <div class="linkImg"></div>
                        <small id="nanoIp" class="linkIp"></small>
                        <div id="nanoBar"></div>
                        <small id="nanoHint" class="linkHint">Click here to link Nanoleaf</small>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center controlRow">
                <div class="checkbox mr-3 text-white">
                    <label class="text-white">
                        <input type="checkbox" id="nanoFlipHorizontal" data-orientation="h" class="nanoFlip"> Flip Horizontally
                    </label>
                </div>
                <div class="checkbox text-white">
                    <label class="text-white">
                        <input type="checkbox" id="nanoFlipVertical" data-orientation="v" class="nanoFlip"> Flip Vertically
                    </label>
                </div>
            </div>
            <div class="row previewRow" id="nanoContainer">
                <div id="canvasDiv">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="bg-dark text-white hidden" id="settingsCard">
    <div id="settingsPane">
        <div class="card-body container">
            <div class="row justify-content-center">
                <h3>Capture Mode</h3>
            </div>
            <div class="row justify-content-center">
                <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group mr-2" role="group" aria-label="First group" id="modeBar">
                        <button type="button" class="btn btn-secondary capModeBtn" data-target="dsCapPane" id="dsCapPaneBtn">
                            <img src="img/cap_mode_dreamscreen.png" alt="Dreamscreen Capture Mode"/>
                        </button>
                        <button type="button" class="btn btn-secondary capModeBtn" data-target="cameraCapPane" id="cameraCapPaneBtn">
                            <img src="img/cap_mode_camera.png" alt="Camera Capture Mode"/>
                        </button>
                        <button type="button" class="btn btn-secondary capModeBtn" data-target="hdmiCapPane" id="hdmiCapPaneBtn">
                            <img src="img/cap_mode_hdmi.png" alt="HDMI Capture Mode"/>
                        </button>
                        <button type="button" class="btn btn-secondary capModeBtn" data-target="screenCapPane" id="screenCapPaneBtn">
                            <img src="img/cap_mode_screen.png" alt="Screen Capture Mode"/>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-md-6">
                    <div id="dsCapPane" class="capPane">
                        <div class="form-group bmd-form-group">
                            <label for="dsIpSelect" class="bmd-label-floating">Target DreamScreen: </label>
                            <select id="dsIpSelect" class="form-control"></select>
                        </div>
                    </div>
                    <div id="hdmiCapPane" class="capPane">
                        <div class="form-group bmd-form-group">
                            <div>HDMI</div>
                        </div>
                    </div>
                    <div id="cameraCapPane" class="capPane">
                        <div class="form-group bmd-form-group">
                            <label for="dsIpSelect" class="bmd-label-floating">Camera Type: </label>
                            <select id="cameraType" class="form-control">
                                <option value="0">Raspberry Pi Camera</option>
                                <option value="1">USB Camera</option>
                            </select>
                        </div>
                    </div>
                    <div id="screenCapPane" class="capPane">
                        <div class="form-group bmd-form-group">
                            <label for="dsIpSelect" class="bmd-label-floating">Monitor selection: </label>
                            <select id="monitorSelection" class="form-control">
                                <option value="0">Stub monitor 1</option>
                                <option value="1">Stub monitor 2</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <h3>LED Count</h3>
            </div>
            <div class="row justify-content-center" id="ledPreview">
                <div class="previewRow col-12 col-md-6" id="ledContainer">
                    <div id="ledDiv">
                        <img src="img/start_tv.png" alt="led_size" id="ledImg"/>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="form-group bmd-form-group col-12 col-md-6">
                    <label for="vCount" class="bmd-label-floating">Top/Bottom Count:</label>
                    <input type="text" class="form-control ledCount" id="vCount" data-type="v">
                    <span class="bmd-help">Enter the number of LEDs on the top and bottom of the screen.</span>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="form-group bmd-form-group col-12 col-md-6">
                    <label for="hCount" class="bmd-label-floating">Left/Right Count:</label>
                    <input type="text" class="form-control ledcount" id="hCount" data-type="h">
                    <span class="bmd-help">Enter the number of LEDs on the left and right sides of the screen.</span>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</main>
