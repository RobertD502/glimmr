                        <label class="switch">
                            <input type="checkbox" class="dsSlider" data-attribute="cecPassthroughEnable">
                            <span class="slider round"></span>
                        </label>
                        <div class="hint">Allow for CEC communication between television and selected source.</div>
                    </div>
